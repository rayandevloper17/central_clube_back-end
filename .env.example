NODE_ENV=production
PORT=3001

# Database
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASS=your-secure-password

# Frontend URL (single primary UI origin)
FRONTEND_URL=https://app.padel-mindset.com

# Comma-separated list of allowed origins (CORS)
# Example: https://app.padel-mindset.com,https://portal.padel-invest.com
ALLOWED_ORIGINS=https://app.padel-mindset.com

# Disable automatic schema sync in production
ENABLE_DB_SYNC=false